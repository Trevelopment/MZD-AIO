{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "brace-style": "off",
        "require-jsdoc": "off",
        "valid-jsdoc": "off",
        "max-len": "off",
        "new-cap": "off",
        "arrow-parens": "off",
        "camelcase": "off",
        "guard-for-in": "off",
        "prefer-rest-params": "off"
        // "max-len": [2, 140, 2]
    }
}
